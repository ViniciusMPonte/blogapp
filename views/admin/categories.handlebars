<h2>Lista de Categorias: </h2>
<br>
<a href="/admin/categories/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categories}}
      
    <div class="card my-2">
        <div class="card-body">

            <h4>{{name}}</h4>
            <small>Slug: {{slug}}</small>
            <br>
            <small>Data de criação: {{date}}</small>
            <br>
            <a href="/admin/categories/edit/{{_id}}"><button class="btn btn-success my-3">Editar categoria</button></a>


            <form action="/admin/categories/delete" method="post">

                <input type="hidden" name="_id" value="{{_id}}">
                <button type="submit" class="btn btn-danger my-3">Deletar categoria</button>

            </form>

        </div>
    </div>

{{else}}

<h4 class="my-4">Nenhuma categoria registrada</h4>

{{/each}}