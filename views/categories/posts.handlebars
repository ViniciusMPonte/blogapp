<h1>{{category.name}}</h1>

{{#each post}}

    <div class="card my-4">
        <div class="card-body">

            <h4>{{title}}</h4>
            <p>{{description}}</p>
            <a href="/posts/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
            <hr>
            <small><strong>Data de publicação: </strong>{{date}}</small>

        </div>
    </div>

{{else}}

    <h5>Nenhuma postagem</h5>

{{/each}}