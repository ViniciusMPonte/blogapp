{{#each errors}}
<div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<h3>Crie sua conta hoje</h3>

<div class="card">
    <div class="card-body">
        <form action="/user/register" method="post" class="needs-validation" novalidate>

            <div  class="mb-3">
                <label for="name">Nome: </label>
                <input type="text" name="name" class="form-control" value="{{userRegister.name}}" required>
                <div class="invalid-feedback"></div>
            </div>

            <div  class="my-3">
                <label for="email">Email: </label>
                <input type="email" name="email" class="form-control" value="{{userRegister.email}}" required>
                <div class="invalid-feedback"></div>
            </div>

            <div  class="my-3">
                <label for="password">Senha: </label>
                <input type="password" name="password" class="form-control" required>
                <div class="invalid-feedback"></div>
            </div>

            <div  class="my-3">
                <label for="repeatedPassword">Repita sua senha: </label>
                <input type="password" name="repeatedPassword" class="form-control" required>
                <div class="invalid-feedback"></div>
            </div>

            <div class="form-check my-3">
                <input class="form-check-input" type="checkbox" value="true" id="isAdmin" name="isAdmin">
                <label class="form-check-label" for="isAdmin">
                    Clique para ter acesso administrativo
                </label>
            </div>

            <button type="submit" class="btn btn-success my-2">Criar conta</button>

        </form>
    </div>
</div>


<script src="/js/validate-form.js"></script>